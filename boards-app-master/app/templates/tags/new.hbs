<div>
  {{#ui-form newValue=model  validation="save" cancel="cancel" bigIcon='tag' smallIcon='plus' header='Tag' description='Adding an object'}}
    <div class="field">
      <label id="" class="" for="frmEdit-title">Title</label>
      <div id="div-frmEdit-title" class="ui input">
        {{input id="frmEdit-title" value=model.tag.title placeholder="Title"}}
      </div>
      <label id="" class="" for="frmEdit-color">Color</label>
      <div id="div-frmEdit-color" class="ui input">
        <select onchange={{action (mut model.tag.color) value="target.value"}} class="ui compact selection dropdown">
        {{#each model.colors as |color|}}
          <option value="{{color}}">{{color}}</option>
        {{/each}}
        </select>
      </div>
    </div>
  {{/ui-form}}
</div>
{{outlet}}