<h1 class="text-center">Services</h1>
<div class="list-group">
  <div class="list-group-item list-group-item-info">
    <div class="list-group-item-heading text-center">
      <p>Choisissez les éléments à inclures</p>
      <strong>{{plural model.countActive
               "Aucun service selectionné"
               "1 service selectionné"
               "services sélectionnés"
      }}</strong>
    </div>
  </div>
  {{#each model.services as |service|}}
    <div class="list-group-item {{if service.active 'active' ''}}" {{action "toggleActive" service}}>
      {{service.name}}
      <span class="badge">{{format-currency service.price}}</span>
    </div>
  {{/each}}
  <div class="list-group-item list-group-item-info">
    &nbsp;
      <span class="badge">{{format-currency model.sumActive}}</span>
  </div>
  <div class="list-group-item">
    <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" aria-label="...">
      </span>
      {{input value = model.promo type = "text" class = "form-control"}}
    </div>
  </div>
  <div class="list-group-item">
      {{model.txRemise}}
      {{model.remise}}
  </div>
</div>
{{outlet}}